{
    "name": "openimagemirror-client",
    "version": "0.1.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:preload": "webpack --config webpack.config.js",
        "build:win": "electron-builder --win --x64",
        "build:win:ia32": "electron-builder --win --ia32",
        "build:linux": "electron-builder --linux --x64",
        "build:linux:ia32": "electron-builder --linux --ia32"
    },
    "dependencies": {
        "axion": "latest"
    },
    "devDependencies": {
            "@babel/core": "^7.14.6",
            "@babel/preset-env": "^7.14.7",
            "babel-loader": "^8.2.2",
            "webpack": "^5.44.0",
            "webpack-cli": "^4.7.2",
            "@types/node": "^16.0.0",
            "electron": "latest",
            "electron-builder": "latest"
    },
    "build": {
        "appId": "com.thewindev.openimagemirror",
        "productName": "OpenImageMirror",
        "files": [
            "**/*",
            "!**/*.ts",
            "!*.code-workspace",
            "!LICENSE.md",
            "!package.json",
            "!package-lock.json",
            "!src/",
            "!e2e/",
            "!hooks/",
            "!.angular-cli.json",
            "!_config.yml",
            "!karma.conf.js",
            "!tsconfig.json",
            "!tslint.json"
        ],
        "directories": {
            "output": "release/"
        },
        "win": {
            "icon": "dist/assets/icon.ico",
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "icon": "dist/assets/icon.icns",
            "target": [
                "dmg"
            ]
        },
        "linux": {
            "icon": "dist/assets/icon.png",
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}